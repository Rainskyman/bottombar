/* components/bottombar/bottombar.wxss */
.bottombar{
  height: 150rpx;
  width: 100vw;
  background: #000;
  position: fixed;
  bottom: 0;
  display: flex;
}
.bottombar .item{
  background: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}
.bottombar .item:active{
  filter: brightness(75%)
}
.bottombar .item image{
  width: 100%;
  height: 100%;
  max-width: 100rpx;
  max-height: 100rpx;
}
.bottombar .item text{
  font-size: 30rpx;
}